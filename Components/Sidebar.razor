    <div class="sidebar-footer">
        <div class="user-profile">
            <div class="user-avatar">TM</div>
            <div class="user-info">
                <div class="user-name">TemplateMo</div>
                <div class="user-role">Administrator</div>
            </div>
        </div>
    </div>
